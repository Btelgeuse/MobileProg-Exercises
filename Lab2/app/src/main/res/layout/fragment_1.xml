<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

    <TextView
        android:id="@+id/select_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the questions"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="-48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/physical_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physical"
        app:layout_constraintTop_toBottomOf="@id/select_question_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mental_btn"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/mental_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mental"
        app:layout_constraintTop_toBottomOf="@id/select_question_title"
        app:layout_constraintStart_toEndOf="@id/physical_btn"
        app:layout_constraintEnd_toStartOf="@id/result_btn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/result_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        app:layout_constraintTop_toBottomOf="@id/select_question_title"
        app:layout_constraintStart_toEndOf="@id/mental_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
